<?xml version='1.0' encoding='utf-8'?>
<widget id="com.pettails.android.AMRoche" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="EstimoteBeacons">
        <param name="android-package" value="com.oracle.mx.ux.cordova.estimotebeacons.EstimoteBeacons" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
    </feature>
    <name>PetTails</name>
    <description>
        An app to find your dearly beloved pet if they go missing. Works in conjunction with Estimote technology.
    </description>
    <author email="alexandermichaelroche@gmail.com" href="http://twitter.com/alexHacked">
        Alexander Roche
    </author>
    <content src="index.html" />
    <access origin="*" />
    <icon src="www/img/dog-chasing-tail.jpg" />
    <icon density="ldpi" platform="android" src="www/img/dog-chasing-tail.jpg" />
    <icon density="mdpi" platform="android" src="www/img/dog-chasing-tail.jpg" />
    <icon density="hdpi" platform="android" src="www/img/dog-chasing-tail.jpg" />
    <icon density="xhdpi" platform="android" src="www/img/dog-chasing-tail.jpg" />
    <preference name="Orientation" value="Portrait" />
    <preference name="SplashScreen" value="dog_chasing_tail_splash" />
    <preference name="SplashScreenDelay" value="5000" />
    <splash height="629" src="www/img/dog-chasing-tail-splash.png" width="473" />
</widget>
